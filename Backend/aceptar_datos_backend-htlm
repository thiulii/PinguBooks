<div class="input_almacena">
    <input type="text" id="mail_perfil" placeholder="Ingrese mail del usuario"> 
    //type puede ser text, date
    <button id="AddMail">Guardar</button>
    </div>
<script>
     const mail_perfil= document.querySelector("mail_perfil"); 
    const guardar_mail= document.querySelector("#AddMail");
    guardar_mail.addEventListener("click", () =>{
            const mail =mail_perfil.values;
            if (!mail || mail.lenght ===0) ()=>{
                alert("El apartado del mail no puede estar vacio")
            }
        }
    )
 </script>